
<div class="navbar navbar-expand-sm sticky-top navbar-dark navbar-lewagon border-bottom border-info">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "passport-logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>

        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <% if current_user.role == 3 %>
            <%= link_to current_user.name, company_dashboard_path, class: "nav-link"  %>
          <% else %>
            <%= link_to current_user.name, user_dashboard_path, class: "nav-link"  %>
          <% end %>
        </li>

        <li class="nav-item dropdown">
          <%= image_tag "nubank-logo-0.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>

        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>

      <% end %>

    </ul>

  </div>
</div>
