<div class="container stamp-main-area">
  <% if @stamp.status < 4 %>
  <br>
  <br>
  <br>
  <br>
  <div class='w-50 mx-auto'>
    <div class="stamp-waiting-img w-100"></div>
    <p class="center-text">Waiting Code Review</p>
  </div>
  <%else%>
  <div class="row">
    <div class="col-5 p-0 stamp-info">
      <div class="stamp-head-img w-100 mb-4"></div>

      <h4>
        <%=@stamp.test.title%>
      </h4>
      <br>
      <div class="d-flex justify-content-center">
        <%= image_tag  "visa_aproved.png", size: "120x120", class:"mx-auto" %>
      </div>
      <br>
      <h4>Stamps</h4>
      <br>
      <div class=" w-75 mx-auto d-flex justify-content-around">
        <i class="fab fa-js-square fa-4x"></i>
        <i class="fab fa-html5 fa-4x"></i>
        <i class="fab fa-css3-alt fa-4x"></i>
        <i class="fab fa-vuejs fa-4x"></i>
      </div>

      <!-- mudar status de 1 para 2 -->
      <!-- se status = 2 -->

      <!-- mostrar aqui formulario para test_answer -->
      <!-- mostrar submit button -->
      <!-- mostrar data limite para terminar o teste -->
      <!-- mudar status para 3 -->
      <br>
      <br>
      <br>
      <br>
    </div>
    <div class="col-7 stamp-border-left">
      <div class="stamp-instructions w-75">
        <h2>Feedback:</h2>
        <p>
          <%=@stamp.reviewer_feedback%>
        </p>
        <br>
        <p> <%= link_to  "Link for Code Review", @stamp.test.link, class: "btn btn-info btn-rounded", id: "btn-code-review" %></p>
        <br>
        <br>
        <br>
        <br>
        <br>
        <h5 class="center-text">Share</h5>
        <br>
        <div class="icon-feedback d-flex justify-content-around w-75 mx-auto">
          <%= link_to '#' do%>
          <i class="fab fa-linkedin fa-3x"></i>
          <%end%>
          <%= link_to '#' do%>
          <i class="fab fa-facebook-square fa-3x"></i>
          <%end%>
          <%= link_to '#' do%>
          <i class="fab fa-twitter-square fa-3x"></i>
          <%end%>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
