<div class="container stamp-main-area">
  <div class="row">
    <div class="col-5 p-0 stamp-info">
      <div class="stamp-head-img w-100 mb-4"></div>

      <h4>
        <%=@stamp.test.title%>
        <%if @stamp.status >= 2 %>
        <div class="stamp-due-date">
          <p>You have until <%= 7.days.from_now.strftime("%Y-%m-%d") %> to finish the project! </p>
        </div>
        <%end%>
        <div class="stamp-actions">
          <p><%= link_to "Start Test", start_test_path, method: "post", class: "btn btn-primary btn-rounded"%></p>
          <%if @stamp.status == 2 %>
          <p> <%= link_to  "Finish Test", finish_test_path, method: "post", class: "btn btn-danger btn-rounded" %></p>
          <p> <%= link_to  "Open Your Test", @stamp.test.link, class: "btn btn-info btn-rounded" %></p>
          <%elsif @stamp.status < 2%>
          <p> <%= link_to  "Finish Test", '', class: "btn btn-secondary disabled btn-rounded" %></p>
          <p> <%= link_to  "Open Yout Test", '', class: "btn btn-secondary disabled btn-rounded" %></p>

          <%end%>
        </div>



        <!-- mudar status de 1 para 2 -->
